			"type": "select",
			"contentFolders": [
				"variant/nogloves/buttoned_suburban",
				"variant_assets/buttoned",
				"variant_assets/buttoned_suburban"
			],
			"image": "buttoned_suburban.jpg"
		},
		{
			"group": "Variant - Signature Suit",
			"name": "Tie clip",
