{
	"$schema": "https://raw.githubusercontent.com/atampy25/simple-mod-framework/main/Mod%20Manager/src/lib/manifest-schema.json",
	"version": "1.0.0",
	"id": "Jojje.H2SignatureSuit",
	"name": "Hitman 2 Signature Suit",
	"description": "Use the Hitman 2 signature suit instead of Hitman 3.",
	"authors": ["Jojje"],
	"frameworkVersion": "2.33.7",
	"dependencies": ["007749C5E756ACF0"],
	"options": [
		{
			"group": "Install",
			"name": "Signature Suit",
			"tooltip": "Replace the Signature Suit.",
			"type": "checkbox",
			"contentFolders": ["base/nogloves"],
			"enabledByDefault": true
		},
		{
			"group": "Install",
			"name": "Signature Suit with Gloves",
			"tooltip": "Replace the Signature Suit with Gloves.",
			"type": "checkbox",
			"contentFolders": ["base/gloves"],
			"enabledByDefault": true
		},
		{
			"group": "Variant - Signature Suit",
			"name": "Default",
			"tooltip": "No change.",
			"type": "select",
			"enabledByDefault": true
		},
		{
			"group": "Variant - Signature Suit",
			"name": "Buttoned",
			"tooltip": "Buttoned jacket.",
			"type": "select",
			"contentFolders": ["variant/nogloves/buttoned", "variant_assets/buttoned"],
			"image": "buttoned.jpg"
		},
		{
			"group": "Variant - Signature Suit",
			"name": "Tie clip",
			"tooltip": "With tie clip.",
			"type": "select",
			"contentFolders": ["variant/nogloves/tieclip"],
			"image": "tieclip.jpg"
		},
		{
			"group": "Variant - Signature Suit with Gloves",
			"name": "Default",
			"tooltip": "No change.",
			"type": "select",
			"enabledByDefault": true
		},
		{
			"group": "Variant - Signature Suit with Gloves",
			"name": "Buttoned",
			"tooltip": "Buttoned jacket.",
			"type": "select",
			"contentFolders": ["variant/gloves/buttoned", "variant_assets/buttoned"],
			"image": "buttoned.jpg"
		},
		{
			"group": "Variant - Signature Suit with Gloves",
			"name": "Tie clip",
			"tooltip": "With tie clip.",
			"type": "select",
			"contentFolders": ["variant/gloves/tieclip"],
			"image": "tieclip.jpg"
		}
	],
	"updateCheck": "https://github.com/JojjeE/h3-hitman2-signature-suit/releases/latest/download/updates.json"
}
